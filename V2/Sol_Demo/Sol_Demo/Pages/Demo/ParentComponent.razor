<div class="container">
    <div class="row">
        <div class="col-12">
            <div style="border:2px solid red">
                <h3>Parent Component</h3>
                <h2>Message : @Message</h2>
                <button class="btn btn-primary" @onclick="OnParentButtonClickEvent">Parent : Submit</button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div style="border:2px solid green">
                <ChildComponent Message="@Message" MessageChanged="GetChildMessageByEventCallBack"></ChildComponent>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div style="border:2px solid orange">
                <ChildTwoWayBindingComponent @bind-Message="Message"></ChildTwoWayBindingComponent>
            </div>
        </div>
    </div>
</div>